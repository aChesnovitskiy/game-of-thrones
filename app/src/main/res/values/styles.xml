<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Toolbar theme -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!-- Splash-screen theme -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Character-screen expanded title text -->
    <style name="TextAppearance.AppCompat.Headline.GameOfThrones" parent="TextAppearance.AppCompat.Headline">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">40sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Character-screen collapsed title text -->
    <style name="CollapsedTitleText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Character-screen properties label text -->
    <style name="PropertiesLabelText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:color">@color/color_gray_dark</item>
        <item name="android:drawableStart">@drawable/ic_icon_decor</item>
        <item name="android:drawablePadding">@dimen/spacing_small_8</item>
        <item name="android:layout_marginStart">@dimen/spacing_normal_16</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal_16</item>
    </style>

    <!-- Character-screen properties text -->
    <style name="PropertiesText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">@dimen/spacing_normal_16</item>
    </style>

    <!-- CharacterList Buttons -->
    <style name="CharacterListButtons">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">@dimen/spacing_normal_16</item>
    </style>

</resources>
